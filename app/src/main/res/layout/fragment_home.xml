<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">


    <Button
        android:id="@+id/btnReloadLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="212dp"
        android:text="Reload"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/city_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="Город"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/updated_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/city_field"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="24dp"
        android:text="Последнее обновление"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/city_field" />

    <ImageView
        android:id="@+id/weather_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="9dp"
        app:layout_constraintBottom_toTopOf="@+id/current_temperature_field"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.944" />

    <TextView
        android:id="@+id/current_temperature_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="-10℃"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="65dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.475" />

    <TextView
        android:id="@+id/details_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weather_icon"
        android:layout_centerHorizontal="true"
        android:text="Детали"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.591" />

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:columnCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:rowCount="4"
        android:padding="12dp">

        <TextView
            android:layout_width="170dp"
            android:text="Ветер"
            android:textSize="15dp"
            app:layout_column="0"
            app:layout_row="0" />
        <TextView
            android:text="Давление"
            android:textSize="15dp"
            app:layout_column="1"
            app:layout_row="0" />
        <TextView
            android:layout_width="170dp"
            android:text="Влажность"
            android:textSize="15dp"
            app:layout_column="0"
            app:layout_row="2" />
        <TextView
            android:text="Вероятность осадков"
            android:height="25dp"
            android:textSize="15dp"
            app:layout_column="1"
            app:layout_row="2" />
        <TextView
            android:layout_width="170dp"
            android:text=""
            android:textSize="25dp"
            app:layout_column="0"
            app:layout_row="1"
            android:id="@+id/wind_field"/>
        <TextView
            android:text=""
            android:textSize="25dp"
            app:layout_column="1"
            app:layout_row="1"
            android:id="@+id/pressure_field"/>
        <TextView
            android:layout_width="170dp"
            android:text=""
            android:textSize="25dp"
            app:layout_column="0"
            app:layout_row="3"
            android:id="@+id/humidity_field"/>
        <TextView
            android:text=""
            android:textSize="25dp"
            app:layout_column="1"
            app:layout_row="3"
            android:id="@+id/chance_of_rain_field"/>

    </androidx.gridlayout.widget.GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>