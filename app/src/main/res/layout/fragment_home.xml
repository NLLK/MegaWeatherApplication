<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <Button
        android:id="@+id/btnReloadLocation"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="112dp"
        android:layout_height="37dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="Обновить"
        android:textColor="@color/orange"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/city_field" />


    <com.google.android.material.chip.Chip
        android:id="@+id/chip_gps"
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="24dp"
        android:visibility="invisible"
        android:text="GPS"
        app:chipIcon="@android:drawable/ic_menu_mylocation"
        app:layout_constraintStart_toEndOf="@+id/city_field"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/city_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="Город"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/updated_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/city_field"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="12dp"
        android:text="Последнее обновление"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/btnReloadLocation"
        app:layout_constraintTop_toBottomOf="@+id/city_field" />

    <ImageView
        android:id="@+id/weather_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="9dp"
        app:layout_constraintBottom_toTopOf="@+id/current_temperature_field"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.944" />

    <TextView
        android:id="@+id/current_temperature_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="-10℃"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="65dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.475" />

    <TextView
        android:id="@+id/details_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weather_icon"
        android:layout_centerHorizontal="true"
        android:text="Детали"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.591" />

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="411dp"
        android:layout_height="135dp"
        android:padding="12dp"
        app:columnCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:rowCount="4">

        <TextView
            android:layout_width="170dp"
            android:text="Ветер"
            android:textSize="15dp"
            app:layout_column="0"
            app:layout_row="0" />

        <TextView
            android:text="Давление"
            android:textSize="15dp"
            app:layout_column="1"
            app:layout_row="0" />

        <TextView
            android:layout_width="170dp"
            android:text="Влажность"
            android:textSize="15dp"
            app:layout_column="0"
            app:layout_row="2" />

        <TextView
            android:height="25dp"
            android:text="Вероятность осадков"
            android:textSize="15dp"
            app:layout_column="1"
            app:layout_row="2" />

        <TextView
            android:id="@+id/wind_field"
            android:layout_width="170dp"
            android:text=""
            android:textSize="25dp"
            app:layout_column="0"
            app:layout_row="1" />

        <TextView
            android:id="@+id/pressure_field"
            android:text=""
            android:textSize="25dp"
            app:layout_column="1"
            app:layout_row="1" />

        <TextView
            android:id="@+id/humidity_field"
            android:layout_width="170dp"
            android:text=""
            android:textSize="25dp"
            app:layout_column="0"
            app:layout_row="3" />

        <TextView
            android:id="@+id/chance_of_rain_field"
            android:text=""
            android:textSize="25dp"
            app:layout_column="1"
            app:layout_row="3" />

    </androidx.gridlayout.widget.GridLayout>



</androidx.constraintlayout.widget.ConstraintLayout>